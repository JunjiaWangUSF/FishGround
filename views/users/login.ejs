<% layout('layouts/viewtemplates') %>
<h1>Login</h1>

<form method="POST" class="validated-from" action="/login">
  <div class="mb-3">
    <label class="from-label" for="username"> Username </label>
    <input
      class="form-control"
      type="text"
      id="username"
      name="username"
      required
    />
  </div>

  <div class="mb-3">
    <label class="from-label" for="Password"> Password </label>
    <input
      class="form-control"
      type="password"
      id="password"
      name="password"
      pattern="(?=.*[A-Za-z])(?=.*\d)(?=.*[@$!%*#?&])[A-Za-z\d@$!%*#?&]{6,}"
      required
    />
  </div>
  <button class="btn-success">Login</button>
</form>
