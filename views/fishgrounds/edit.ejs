<% layout('layouts/viewtemplates') %> 
    <h1>Edit fishground locations</h1>
    <form action="/fishground/<%= fishground._id %>?_method=PUT" method="POST">
        <div>
            <label for="title"> Title </label>
            <input type="text" id="title" name = "fishground[title]" value="<%= fishground.title %> ">
        </div>

        <div>
            <label for="location"> Location </label>
            <input type="text" id="location" name = "fishground[location]" value="<%= fishground.location %>">
        </div>
        <button>Update Location</button>

    </form>
    <a href="/fishground/<% fishground._id %> ">Back to previous pages</a>
