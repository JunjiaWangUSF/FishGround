<% layout('layouts/viewtemplates') %>
<h1>Edit fishground locations</h1>

<div class="row">
  <h1 class="text-center">Edit Your Post</h1>
  <div class="col-6 offset-3">
    <form action="/fishground/<%= fishground._id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <label class="from-label" for="title"> Title </label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="fishground[title]"
          value="<%= fishground.title %>"
          required
        />
      </div>

      <div class="mb-3">
        <label class="from-label" for="location"> Location </label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="fishground[location]"
          value="<%= fishground.location %>"
          required
        />
      </div>

      <div class="mb-3">
        <label class="from-label" for="image"> Image Url </label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="fishground[image]"
          value="<%= fishground.image %>"
          required
        />
      </div>

      <div class="mb-3">
        <label class="from-label" for="description"> description </label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="fishground[description]"
          required
        >
<%= fishground.description %></textarea
        >
      </div>
      <button class="btn-primary">Submit</button>
    </form>

    <a href="/fishground/<% fishground._id %> ">Back to previous pages</a>
  </div>
</div>
